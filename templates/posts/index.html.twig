{% extends 'base.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
    <h1>Posts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Author</th>
                <th>Archive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
        {% if not post.archive %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content }}</td>
                    <td>{{ post.author }}</td>
                    <td>{{ post.Archive ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('posts_show', {'id': post.id}) }}">show</a>
                        <a href="{{ path('posts_edit', {'id': post.id}) }}">edit</a>
                    </td>
                </tr>

        {% endif %}
        {% endfor %}
        </tbody>
    </table>
    <h1>Archived Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Author</th>
                <th>Archive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
        {% if post.archive %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content }}</td>
                    <td>{{ post.author }}</td>
                    <td>{{ post.Archive ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('posts_show', {'id': post.id}) }}">show</a>
                        <a href="{{ path('posts_edit', {'id': post.id}) }}">edit</a>
                    </td>
                </tr>

        {% endif %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('posts_new') }}">Create new</a>
{% endblock %}
